<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        cardview:contentPadding="0"
  >
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:minWidth="25px"
            android:minHeight="25px">

    <TextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:text="進階玩法"
        android:textSize="31sp"
        android:background="@drawable/shape"
        android:layout_marginBottom="15dp"
    />
            <Button
                android:id="@+id/basis1"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_below="@id/text"
                android:text="甚麼是超進化"
                android:textSize="40dp"
                android:background="#B2EBF2" />
            <Button
                android:id="@+id/basis2"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_below="@id/basis1"
                android:text="寶可夢交換時間"
                android:textSize="40dp"
                android:background="#B2DFDB" />
            <Button
                android:id="@+id/basis3"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_below="@id/basis2"
                android:text="特殊技能"
                android:textSize="40dp"
                android:background="#C8E6C9" />
            <Button
                android:id="@+id/basis4"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_below="@id/basis3"
                android:text="按+50技巧"
                android:textSize="40dp"
                android:background="#DCEDC8" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/transparent"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:elevation="4dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.v4.widget.DrawerLayout>