<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    cardview:cardCornerRadius="15dp"
    android:layout_gravity="center_horizontal">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cardview:cardCornerRadius="15dp"
        android:layout_gravity="center_horizontal"
        >
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:background="@drawable/backgroundcolor">
            <TextView
                android:id="@+id/textview0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="１投出去的球是哪種球呢？"
                android:textSize="30dp"
                android:textColor="#E91212"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textview0"
                android:text="投擲的球有「精靈球」「超級球」「高級球」「掌門球」喔！"
                android:textSize="20dp" />


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:layout_below="@id/textview1"
                cardview:srcCompat="@mipmap/bassis41" />
            <TextView
                android:id="@+id/textview2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imageView1"
                android:text="對戰時，快一點選擇技能，你們隊的寶可夢的HP剩的越多，球轉輪上的超級球和高級球就越多喔！"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="２那麼把球投出去，就可以捕捉寶可夢囉！"
                android:textSize="30dp"
                android:textColor="#E91212"
                android:layout_below="@id/textview2"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:layout_below="@id/textview4"
                cardview:srcCompat="@mipmap/bassis42" />
            <TextView
                android:id="@+id/textview4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="按球按鈕，讓球轉輪停下來吧！選擇的球就會朝對手的寶可夢飛過去喔！
會捉到哪隻寶可夢呢？真是緊張又期待！聽到「喀嚓」的話，就是捕捉到了喔！
 捉到寶可夢之後，TRETTA選手會提議交換寶可夢呢！"
                android:layout_below="@id/textview3"
                android:textSize="20dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="球轉輪增強力量！在球轉輪時，會出現「轉輪機會」喔！球按鈕一面倒的話，說不定會變成等級高的球"
                android:layout_below="@id/imageView2"
                android:textSize="20dp"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:layout_below="@id/textview5"
                cardview:srcCompat="@mipmap/bassis43" />
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:layout_below="@id/imageView3"
                cardview:srcCompat="@mipmap/bassis44" />
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:layout_below="@id/imageView4"
                cardview:srcCompat="@mipmap/bassis45" />
            <TextView
                android:id="@+id/textview6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="３捕獲的寶可夢變成PokémonTRETTA跑出來喔！"
                android:textSize="30dp"
                android:textColor="#E91212"
                android:layout_below="@id/imageView5"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="高明地捕獲到的寶可夢，立刻變成「PokémonTRETTA」跑出來喔！運氣好的話，有可能可以捕獲2隻、3隻寶可夢。這時候再放入30元的話還會多1隻，再多放30元的話，又會多1隻「PokémonTRETTA」可以帶回家喔！"
                android:layout_below="@id/textview6"
                android:textSize="20dp"
                android:gravity="center_horizontal"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
