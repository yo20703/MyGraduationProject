<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    cardview:cardCornerRadius="15dp"
    android:layout_gravity="center_horizontal">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cardview:cardCornerRadius="15dp"
        android:layout_gravity="center_horizontal"
        >
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:background="@drawable/backgroundcolor">
            <TextView
                android:id="@+id/textview0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="１你要怎樣才能捉到PokémonTRETTA呢？"
                android:textSize="30dp"
                android:textColor="#E91212"
                android:gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_below="@id/textview0"
                cardview:srcCompat="@mipmap/ver7" />
            <TextView
                android:id="@+id/textview2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="２滿滿的PokémonTRETTA的資料！？"
                android:textSize="30dp"
                android:textColor="#E91212"
                android:layout_below="@id/imageView1"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_below="@id/textview2"
                cardview:srcCompat="@mipmap/ver1" />
            <TextView
                android:id="@+id/textview3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="① 寶可夢名字"
                android:layout_below="@id/imageView2"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="寫著寶可夢的名字喔！"
                android:layout_below="@id/textview3"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="②寶可夢能量"
                android:layout_below="@id/textview4"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="展現強度的數字喔！越高對戰時越有利！"
                android:layout_below="@id/textview5"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="③ 本體屬性"
                android:layout_below="@id/textview6"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="了解這隻寶可夢的屬性。以有利的契合度對戰！"
                android:layout_below="@id/textview7"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="④ 等級"
                android:layout_below="@id/textview8"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="★號表示等級喔！相同的寶可夢也會因為等級的關係能力不一樣。"
                android:layout_below="@id/textview9"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_below="@id/textview10"
                cardview:srcCompat="@mipmap/ver2" />
            <TextView
                android:id="@+id/textview11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="① HP"
                android:layout_below="@id/imageView3"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="表示體力喔！變成0（零）的話，會重新變成球，就不能施展技能囉！"
                android:layout_below="@id/textview11"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="② 捕捉的技能"
                android:layout_below="@id/textview12"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="因為也顯示了技能的屬性，所以考慮契合度的時候要仔細看一下！"
                android:layout_below="@id/textview13"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="③ 寶可夢的說明"
                android:layout_below="@id/textview14"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="捕獲的寶可夢的特徵。"
                android:layout_below="@id/textview15"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview17"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="④ 攻擊"
                android:layout_below="@id/textview16"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="越大越容易造成傷害。"
                android:layout_below="@id/textview17"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview19"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="⑤ 防禦"
                android:layout_below="@id/textview18"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="越大越不容易受傷。"
                android:layout_below="@id/textview19"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview21"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="⑥ 速度"
                android:layout_below="@id/textview20"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview22"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="越大越會躲，也容易先攻擊。"
                android:layout_below="@id/textview21"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_below="@id/textview22"
                cardview:srcCompat="@mipmap/ver3" />
            <TextView
                android:id="@+id/textview23"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="① 寶可夢名字"
                android:layout_below="@id/imageView4"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview24"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="寫著寶可夢的名字喔！"
                android:layout_below="@id/textview23"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview25"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="② 超進化前的寶可夢能量"
                android:layout_below="@id/textview24"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview26"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="超進化前的寶可夢能量（數字表示強度）喔！"
                android:layout_below="@id/textview25"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview27"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="③ 超進化後的寶貝能量"
                android:layout_below="@id/textview26"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview28"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="超進化後的寶可夢能量（數字表示強度）喔！"
                android:layout_below="@id/textview27"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview29"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="④ 本體屬性"
                android:layout_below="@id/textview28"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview30"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="了解這隻寶可夢的屬性。以有利的契合度對戰！"
                android:layout_below="@id/textview29"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview31"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="⑤ 等級"
                android:layout_below="@id/textview30"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview32"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="★號表示等級喔！相同的寶可夢也會因為等級的關係能力不一樣。"
                android:layout_below="@id/textview31"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview33"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="⑥ 超進化前的寶可夢"
                android:layout_below="@id/textview32"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview34"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="超進化前的寶可夢的插圖喔！"
                android:layout_below="@id/textview33"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview35"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="⑦ 超進化後的寶可夢"
                android:layout_below="@id/textview34"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview36"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="超進化後的寶可夢的插圖喔！"
                android:layout_below="@id/textview35"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview37"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="３什麼是「改變姿勢」？"
                android:textSize="30dp"
                android:textColor="#E91212"
                android:layout_below="@id/textview36"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_below="@id/textview37"
                cardview:srcCompat="@mipmap/ver4" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/textview39"
                cardview:srcCompat="@mipmap/ver5" />
            <TextView
                android:id="@+id/textview38"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="在第3回合使用帶有改變姿勢標誌的PokémonTRETTA的話，，會改變姿勢，可以使用改變姿勢前「不同屬性的技能」！如果是帶有改變姿勢標誌的PokémonTRETTA的話，即使在第1回合或第2回合的攻擊時使用，在第3回合改變姿勢之後，可以進行第2次的攻擊喔！"
                android:layout_below="@id/imageView5"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textview39"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="改變姿勢的畫面"
                android:layout_below="@id/textview38"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/textview40"
                cardview:srcCompat="@mipmap/ver8" />
            <TextView
                android:id="@+id/textview40"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="改變姿勢前和改變姿勢後出現「不同屬性的技能」"
                android:layout_below="@id/imageView6"
                android:textSize="30dp"
                android:textColor="#2979FF"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/imageView7"
                cardview:srcCompat="@mipmap/ver9" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
