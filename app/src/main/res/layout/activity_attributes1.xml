<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        cardview:contentPadding="0"
>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:orientation="vertical"
            android:background="@drawable/backgroundcolor">
            <TextView
                android:id="@+id/text"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape"
                android:gravity="center_horizontal"
                android:text="模擬選牌"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sk1"
                android:background="#A42D00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/battlegrid2"
                android:gravity="center"
                android:text="推薦技能"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/fsk1"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sk1"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text=""
                android:textSize="25dp" />

            <TextView
                android:id="@+id/fsk2"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sk1"
                android:layout_marginLeft="4dp"

                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/fsk1"
                android:gravity="center"
                android:text=""
                android:textSize="25dp" />

            <TextView
                android:id="@+id/fsk3"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sk1"
                android:layout_toRightOf="@+id/fsk2"
                android:gravity="center"
                android:text=""
                android:textSize="25dp" />

            <TextView
                android:id="@+id/sa1"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fsk1"
                android:gravity="center"
                android:text="技能屬性"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/sa2"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fsk1"
                android:layout_toRightOf="@+id/sa1"
                android:gravity="center"
                android:text="技能屬性"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/sa3"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fsk1"
                android:layout_toRightOf="@+id/sa2"
                android:gravity="center"
                android:text="技能屬性"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/fa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sa1"
                android:gravity="center"
                android:background="#DDAA00"
                android:text="本體屬性"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/fa1"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fa"
                android:gravity="center"
                android:text="本體屬性"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/fa2"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fa"
                android:layout_toRightOf="@+id/fa1"
                android:gravity="center"
                android:text="本體屬性"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/fa3"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fa"
                android:layout_toRightOf="@+id/fa2"
                android:gravity="center"
                android:text="本體屬性"
                android:textSize="30dp" />


            <Button
                android:id="@+id/btn1"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_below="@+id/toolbar"
                android:layout_marginLeft="10dp"
                android:textColor="#DDDDDD"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="一般"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"
                />

            <Button
                android:id="@+id/btn2"
                android:textStyle="bold"
                android:textColor="#CC0000"
                android:layout_width="65dp"
                android:text="格鬥"
                android:layout_height="50dp"
                android:layout_below="@+id/toolbar"
                android:layout_toRightOf="@+id/btn1"
                android:textSize="20dp"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"/>

            <Button
                android:id="@+id/btn3"
                android:textStyle="bold"
                android:layout_width="65dp"
                android:text="毒"
                android:layout_height="50dp"
                android:layout_below="@+id/toolbar"
                android:layout_toRightOf="@+id/btn2"
                android:textSize="20dp"
                android:textColor="#CC00FF"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"
                />

            <Button
                android:id="@+id/btn4"
                android:textStyle="bold"
                android:text="飛行"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_below="@+id/toolbar"
                android:layout_toRightOf="@+id/btn3"
                android:textSize="20dp"
                android:textColor="#CCDDFF"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="65dp"
                android:textStyle="bold"
                android:text="蟲"
                android:layout_height="50dp"
                android:layout_below="@+id/toolbar"
                android:layout_toRightOf="@+id/btn4"
                android:textSize="20dp"
                android:textColor="#BBFF00"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"
                />

            <Button
                android:id="@+id/btn6"
                android:text="岩石"
                android:textStyle="bold"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_below="@+id/toolbar"
                android:layout_toRightOf="@+id/btn5"
                android:textSize="20dp"
                android:textColor="#880000"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"/>


            <Button
                android:id="@+id/btn7"
                android:text="鋼"
                android:textStyle="bold"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btn1"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="#99FFFF"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"/>

            <Button
                android:id="@+id/btn8"
                android:text="火"
                android:textStyle="bold"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btn1"
                android:layout_toRightOf="@+id/btn7"
                android:textSize="20dp"
                android:textColor="#FF5511"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="65dp"
                android:textStyle="bold"
                android:text="水"
                android:layout_height="50dp"
                android:layout_below="@+id/btn1"
                android:layout_toRightOf="@+id/btn8"
                android:textSize="20dp"
                android:textColor="#00BBFF"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"/>

            <Button
                android:id="@+id/btn10"
                android:layout_width="65dp"
                android:textStyle="bold"
                android:text="草"
                android:layout_height="50dp"
                android:layout_below="@+id/btn1"
                android:layout_toRightOf="@+id/btn9"
                android:textSize="20dp"
                android:textColor="#008800"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"/>

            <Button
                android:id="@+id/btn11"
                android:layout_width="65dp"
                android:textStyle="bold"
                android:text="冰"
                android:layout_height="50dp"
                android:layout_below="@+id/btn1"
                android:layout_toRightOf="@+id/btn10"
                android:textSize="20dp"
                android:textColor="#33FFDD"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"/>

            <Button
                android:id="@+id/btn12"
                android:layout_width="65dp"
                android:text="超能力"
                android:textStyle="bold"
                android:layout_height="50dp"
                android:layout_below="@+id/btn1"
                android:layout_toRightOf="@+id/btn11"
                android:textSize="20dp"
                android:textColor="#FFB3FF"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"/>


            <Button
                android:id="@+id/btn13"
                android:layout_width="65dp"
                android:text="惡"
                android:textStyle="bold"
                android:layout_height="50dp"
                android:layout_below="@+id/btn7"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="#444444"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"/>

            <Button
                android:id="@+id/btn14"
                android:text="妖精"
                android:textStyle="bold"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btn7"
                android:layout_toRightOf="@+id/btn13"
                android:textSize="20dp"
                android:textColor="#CC00CC"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"/>

            <Button
                android:id="@+id/btn15"
                android:text="地面"
                android:textStyle="bold"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btn7"
                android:layout_toRightOf="@+id/btn14"
                android:textSize="20dp"
                android:textColor="#AA7700"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"/>

            <Button
                android:id="@+id/btn16"
                android:layout_width="65dp"
                android:text="幽靈"
                android:textStyle="bold"
                android:layout_height="50dp"
                android:layout_below="@+id/btn7"
                android:layout_toRightOf="@+id/btn15"
                android:textSize="20dp"
                android:textColor="#000088"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"/>

            <Button
                android:id="@+id/btn17"
                android:textStyle="bold"
                android:text="電"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btn7"
                android:layout_toRightOf="@+id/btn16"
                android:textSize="20dp"
                android:textColor="#EEEE00"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"/>

            <Button
                android:id="@+id/btn18"
                android:text="龍"
                android:textStyle="bold"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btn7"
                android:layout_toRightOf="@+id/btn17"
                android:textSize="20dp"
                android:textColor="#888800"
                android:background="@drawable/attbutton"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="25"/>


            <GridView
                android:id="@+id/battlegrid2"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_below="@+id/btn18"
                android:background="#FFCCCC"
                android:numColumns="3"
                tools:ignore="MissingConstraints" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/transparent"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawermenu" />
</android.support.v4.widget.DrawerLayout>