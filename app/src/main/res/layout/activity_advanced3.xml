<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    cardview:cardCornerRadius="15dp"
    android:layout_gravity="center_horizontal">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cardview:cardCornerRadius="15dp"
        android:layout_gravity="center_horizontal"
        >
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:background="@drawable/backgroundcolor">
            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="１什麼是「連段攻擊」？"
                android:textSize="30dp"
                android:textColor="#E91212"
                android:gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@id/textview"
                cardview:srcCompat="@mipmap/adv1" />
            <TextView
                android:id="@+id/textview4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="組合帶有特定連段標誌的PokémonTRETTA一起出戰的話，可以展開「連段攻擊」喔！哪隻寶可夢和哪隻寶可夢可以組合起來展開連段攻擊呢？把連段標誌當作提示試著找找看囉！"
                android:layout_below="@id/imageView1"
                android:textSize="20dp" />
            <TextView
            android:id="@+id/textview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="２什麼是「連段攻擊」？"
            android:textSize="30dp"
            android:textColor="#E91212"
                android:layout_below="@id/textview4"
            android:gravity="center_horizontal"/>
            <TextView
            android:id="@+id/textview5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="例如用「鴨嘴焰龍」和「電擊魔獸」發動連段攻擊！"
            android:layout_below="@id/textview2"
            android:textSize="20dp"
            android:textColor="#2979FF" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@id/textview5"
                cardview:srcCompat="@mipmap/adv3" />
            <TextView
                android:id="@+id/textview3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="３組合三隻的話，可以進行二次「連段攻擊」!"
                android:textSize="30dp"
                android:textColor="#E91212"
                android:layout_below="@id/imageView2"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textview6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="例如用「超能妙喵♂」和「妙喵」和「超能妙喵♀」 發動連段攻擊！"
                android:layout_below="@id/textview3"
                android:textSize="20dp"
                android:textColor="#2979FF" />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@id/textview6"
                cardview:srcCompat="@mipmap/adv2" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
