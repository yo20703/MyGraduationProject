<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        cardview:contentPadding="0"
       >
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFF9C4"
            android:minWidth="25px"
            android:minHeight="25px"
            >
            <EditText
                android:id="@+id/et_Name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="輸入神奇寶貝名"
                android:layout_below="@+id/text"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="66dp"

                />


            <Spinner
                android:id="@+id/SP"
                android:layout_width="120dp"
                android:layout_height="62dp"
                android:layout_below="@+id/et_Name"
                android:layout_toRightOf="@+id/button2"
                android:background="@drawable/buttonshape3"
                >
            </Spinner>
            <Button
                android:id="@+id/all"
                android:text="全選"
                android:textSize="10sp"
                android:layout_width="80sp"
                android:layout_height="60sp"
                android:layout_below="@+id/p9"
                android:layout_toRightOf="@+id/p13"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="125dp"
                android:background="@drawable/buttonshape3"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"/>
            <Button
                android:id="@+id/unall"
                android:text="全不選"
                android:textSize="10sp"
                android:layout_width="80sp"
                android:layout_height="60dp"
                android:layout_below="@+id/p9"
                android:layout_toRightOf="@+id/all"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="125dp"
                android:background="@drawable/buttonshape3"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"/>
            <Button
                android:id="@+id/SB"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/et_Name"
                android:text="↑"
                android:textSize="30sp"
                android:layout_toRightOf="@id/SP"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="125dp"
                android:background="@drawable/buttonshape3"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"/>/>
            <Button
                android:id="@+id/button2"
                android:layout_width="205dp"
                android:layout_height="62dp"
                android:layout_below="@id/et_Name"
                android:textStyle="bold"
                android:text="篩選器"
                tools:ignore="DuplicateIds,MissingConstraints"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="125dp"
                android:background="@drawable/buttonshape3"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"/>
            <TextView
                android:id="@+id/text"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:text="圖鑑"
                android:textSize="30sp"
                android:background="@drawable/shape"
                />
            <CheckBox
                android:id="@+id/p1"
                android:checked="true"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/button2"
                android:text="第1彈"
                android:background="@drawable/buttonshape3"
                />
            <CheckBox
                android:id="@+id/p2"
                android:checked="false"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/button2"
                android:layout_toRightOf="@+id/p1"
                android:text="第2彈"
                android:background="@drawable/buttonshape3"

                />
            <CheckBox

                android:background="@drawable/buttonshape3"
                android:id="@+id/p3"
                android:checked="false"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/button2"
                android:layout_toRightOf="@+id/p2"
                android:text="第3彈"
                />
            <CheckBox
                android:id="@+id/p4"
                android:background="@drawable/buttonshape3"
                android:checked="false"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/button2"
                android:layout_toRightOf="@+id/p3"
                android:text="第4彈"
                />
            <CheckBox
                android:id="@+id/p5"
                android:checked="false"
                android:background="@drawable/buttonshape3"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/button2"
                android:layout_toRightOf="@+id/p4"
                android:text="第5彈"
                />
            <CheckBox
                android:id="@+id/p6"
                android:checked="false"
                android:background="@drawable/buttonshape3"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/p1"
                android:text="第6彈"
                />
            <CheckBox
                android:id="@+id/p7"
                android:background="@drawable/buttonshape3"
                android:checked="false"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/p1"
                android:layout_toRightOf="@+id/p6"
                android:text="第7彈"
                />
            <CheckBox
                android:id="@+id/p8"
                android:checked="false"
                android:background="@drawable/buttonshape3"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/p1"
                android:layout_toRightOf="@+id/p7"
                android:text="第8彈"
                />
            <CheckBox
                android:id="@+id/p9"
                android:checked="false"
                android:background="@drawable/buttonshape3"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/p1"
                android:layout_toRightOf="@+id/p8"
                android:text="第9彈"
                />
            <CheckBox
                android:id="@+id/p10"
                android:background="@drawable/buttonshape3"
                android:checked="false"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/p1"
                android:layout_toRightOf="@+id/p9"
                android:text="第10彈"
                />
            <CheckBox
                android:id="@+id/p11"
                android:checked="false"
                android:background="@drawable/buttonshape3"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/p6"
                android:text="第11彈"
                />
            <CheckBox
                android:id="@+id/p12"
                android:checked="false"
                android:background="@drawable/buttonshape3"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/p6"
                android:layout_toRightOf="@id/p11"
                android:text="第12彈"
                />
            <CheckBox
                android:id="@+id/p13"
                android:background="@drawable/buttonshape3"
                android:checked="false"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/p6"
                android:layout_toRightOf="@+id/p12"
                android:text="第13彈"
                />
            <CheckBox
                android:id="@+id/p14"
                    android:background="@drawable/buttonshape3"
                android:checked="false"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/p13"
                android:text="第14彈"
            />
            <CheckBox
                android:id="@+id/p15"
                android:checked="false"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/p13"
                android:layout_toRightOf="@+id/p14"
                android:background="@drawable/buttonshape3"
                android:text="第15彈"
                />
            <CheckBox
                android:id="@+id/bag123"
                android:checked="false"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/p13"
                android:layout_toRightOf="@+id/p15"
                android:background="@drawable/buttonshape3"
                android:text="已持有"
                />

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="275dp"
                android:columnWidth="120dp">
            <com.example.ge.myapplication123.MyGridView
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:horizontalSpacing="12dp"
                android:numColumns="3"
                android:verticalSpacing="10dp"/>
            </ScrollView>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/transparent"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:elevation="4dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.v4.widget.DrawerLayout>